{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "esnext",
    "module": "esnext",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "lib": [
      "esnext"
    ],
    "types": [
      "@cloudflare/workers-types",
      "node"
    ],
    "typeRoots": [
      "node_modules/@types",
      "node_modules/@cloudflare/workers-types"
    ]
  },
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node"
  }
}