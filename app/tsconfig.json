{
  "include": [
    "src/**/*",
    "src/**/*.vue",
  ],
  "compilerOptions": {
    "outDir": "build",
    "baseUrl": ".",
    "module": "ES2020",
    "target": "ES2020",
    "lib": [
      "DOM",
      "DOM.Iterable",
      "es2020"
    ],
    "strict": true,
    "esModuleInterop": true,
    "jsx": "preserve",
    "skipLibCheck": true,
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "noUnusedLocals": true,
    "strictNullChecks": true,
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    "types": [
      "vite/client",
    ],
    "paths": {
      "~/*": [
        "src/*"
      ]
    },
  },
  "ts-node": {
    "esm": true,
    "transpileOnly": true,
    "compilerOptions": {
      "module": "CommonJS",
      "moduleResolution": "Node16"
    }
  },
  "exclude": [
    "dist",
    "node_modules",
    "cypress",
    "public/mockServiceWorker.js",
  ]
}